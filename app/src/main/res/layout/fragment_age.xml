<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aigestudio="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#25292D"
    tools:context="in.droidoselabs.myapplication.fragments.AgeFragment">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="How young are you !"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:textSize="24sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="This will help us choose right amunt of stress your body can bear."
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:textSize="16sp"/>


    <in.droidoselabs.myapplication.activity.WheelPicker
        android:id="@+id/main_wheel_left"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginEnd="12dp"
        android:background="#25292D"
        aigestudio:wheel_atmospheric="true"
        aigestudio:wheel_curved="true"
        aigestudio:wheel_cyclic="true"
        aigestudio:wheel_item_align="center"
        aigestudio:wheel_item_text_color="#fff"
        aigestudio:wheel_item_text_size="28sp"
        aigestudio:wheel_selected_item_text_color="@color/colorPrimary"
        aigestudio:wheel_values="@array/WheelArrayDefault2" />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_watch_with_blank_face"/>
</FrameLayout>
