<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragementBg"
    tools:context="in.droidoselabs.myapplication.fragments.GenderFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/choose_your_gender"
        android:textColor="@color/white"
        android:textSize="24sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:padding="15dp"
        android:text="@string/help_description"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:background="@drawable/circular_bg">

        <View
            android:id="@+id/view_center"
            android:layout_width="160dp"
            android:layout_height="35dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/circular_bg_blue"
            android:visibility="gone" />

        <View
            android:id="@+id/view_center_black"
            android:layout_width="160dp"
            android:layout_height="35dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="18dp"
            android:background="@drawable/circular_bg"
            android:visibility="visible" />


        <FrameLayout
            android:layout_width="70dp"
            android:layout_height="70dp">

            <View
                android:id="@+id/view_male"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/circular_male_gender"
                android:visibility="gone" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:contentDescription="@string/male"
                android:padding="20dp"
                android:src="@drawable/ic_male" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="70dp"
            android:layout_height="70dp">

            <View
                android:id="@+id/view_move"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/circular_male_gender"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/male"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:contentDescription="@string/male"
                android:padding="20dp"
                android:src="@drawable/ic_male" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="130dp">

            <View
                android:id="@+id/view_female"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/circular_male_gender"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/female"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:contentDescription="@string/female"
                android:padding="19dp"
                android:src="@drawable/ic_female" />
        </FrameLayout>
    </RelativeLayout>

</FrameLayout>
